extend type Query {
    products: [Product]
    productsWithFilter(filter: ProductFilter): [Product]
    product(id: ID!): Product!
}

type Product {
    id: ID!
    name: String!
    image: String!
    price: Int!
    color: String!
    material: String!
    description: String
    category: Category
    stores: [Store]
}

input ProductFilter {
    pageNumber: Int!
    pageSize: Int!
    categoryId: Int!
    name: FilterField
    price: FilterField
    color: FilterField
    material: FilterField
    isDetail: Boolean
    isCache: Boolean
}

input FilterField {
    operator: String!
    value: String!
}